<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <declare-styleable name="TextProgressBar">
        <attr name="progressBackground" format="reference"/>
    </declare-styleable>

    <style name="Theme.Jeeves" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="Theme.Jeeves.IndeterminateProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/jeeves_progress_bar_indeterminate</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:maxWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:maxHeight">32dp</item>
    </style>

    <style name="Theme.Jeeves.Panel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/jeeves_panel_no_border</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Theme.Jeeves.FittingHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/jeeves_panel_no_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Jeeves.FittingSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/lightgrey</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

</resources>