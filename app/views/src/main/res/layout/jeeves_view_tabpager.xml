<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/jeeves_views_tabs_PagerTabStrip"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/jeeves_panel_no_border"
        app:pstsShouldExpand="true"
        app:pstsIndicatorHeight="2dp"
        app:pstsIndicatorColor="@color/lightblue"/>

    <com.tlabs.android.jeeves.views.ui.pager.ViewPager
        android:id="@+id/jeeves_views_tabs_PagerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>