<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/j_character_attribute_RowAttributeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:maxWidth="24dp"
        android:src="@drawable/icon22_32_3"/>


    <TextView
        android:id="@+id/j_character_attribute_RowAttributeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:gravity="left|center_vertical"
        android:text="Intelligence"
        android:textColor="@color/white"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/j_character_attribute_RowAttributeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="0.9"
        android:gravity="right|center_vertical"/>


    <TextView
        android:id="@+id/j_character_attribute_RowAttributeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginLeft="4dp"
        android:gravity="right|center_vertical"
        android:textColor="@color/white"/>

</LinearLayout>
