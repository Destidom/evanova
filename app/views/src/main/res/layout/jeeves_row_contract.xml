<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/jeeves_panel_no_border"
    android:focusable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_row_contractItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_weight="0.1"
            android:focusable="false"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLines="2"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_row_contractStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="right"
            android:maxLines="1"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_row_contractType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"/>

        <TextView
            android:id="@+id/j_row_contractDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dip"
            android:layout_weight="0.4"
            android:focusable="false"
            android:gravity="right"
            android:maxLines="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/j_row_contractPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"/>

</LinearLayout>