<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|fill_horizontal"
    android:background="@drawable/jeeves_panel_no_border"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="32dp" >

    <TextView
        android:id="@+id/certificateGroupText"
        android:layout_width="0dp"        
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="left|center_vertical"
        android:layout_gravity="left|center_vertical"                
        android:maxLines="2"
        android:text="Corporation Management"
        android:textColor="@color/white"
        android:textSize="16sp">
    </TextView>

        <ImageView
            android:id="@+id/certificateGroupImage"
            android:layout_width="32dip"
            android:layout_height="32dip"            
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/jeeves_level_list_certificates"/>
</LinearLayout>