<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@drawable/jeeves_panel_no_border">

    <ImageView
        android:id="@+id/j_killmail_item_ItemIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/j_killmail_item_ItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/j_killmail_item_ItemIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        android:gravity="left|center_vertical"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:text="Dropped"
        android:textSize="12sp"
        android:textIsSelectable="true"
        android:layout_below="@+id/j_killmail_item_ItemName"
        android:layout_toRightOf="@+id/j_killmail_item_ItemIcon"
        android:layout_toEndOf="@+id/j_killmail_item_ItemIcon"/>

    <TextView
        android:id="@+id/j_killmail_item_ItemDropped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ellipsize="end"
        android:gravity="center_horizontal|right"
        android:maxLines="1"
        android:textSize="12sp"/>

    <TextView

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="Destroyed"
        android:textSize="12sp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/j_killmail_item_ItemIcon"
        android:layout_toEndOf="@+id/j_killmail_item_ItemIcon"/>

    <TextView
        android:id="@+id/j_killmail_item_ItemDestroyed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:ellipsize="end"
        android:gravity="center_horizontal|right"
        android:maxLines="1"
        android:textSize="12sp"/>

</RelativeLayout>