<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    style="@style/Theme.Jeeves.Panel"
    android:focusable="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/j_walletTransactionWhen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday 1 April 2012 20h 34mn" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_walletTransactionItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_weight="0.1"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLines="2"
            android:text="Bag of Potatoes"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_walletTransactionQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="123.000.000 units"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:text="Price per unit"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_walletTransactionPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="1.250.000.000,00 ISK"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:text="Total Price"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_walletTransactionCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="1.250.000.000.000,00 ISK"
            android:textColor="@color/green" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_walletTransactionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:text="Buyer"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_walletTransactionClient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Ungrateful Wrench" >
        </TextView>
    </LinearLayout>

</LinearLayout>