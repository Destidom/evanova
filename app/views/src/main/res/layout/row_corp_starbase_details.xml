<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jeeves_panel_no_border"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rowStarbaseDetailsName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center_vertical|left"
                android:text="Babylon V"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/rowStarbaseDetailsAllowAlliance"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/jeeves_level_list_starbase_alliance_access" />

            <ImageView
                android:id="@+id/rowStarbaseDetailsAllowCorporation"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/jeeves_level_list_starbase_corporation_access" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/rowStarbaseDetailsTypeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Amarr Control Tower" />

            <TextView
                android:id="@+id/rowStarbaseDetailsStandingOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traquenard Labs." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/rowStarbaseDetailsStateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="center_vertical|left"
                android:maxLines="1"
                android:text="Online" />

            <TextView
                android:id="@+id/rowStarbaseDetailsStateDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:maxLines="1"
                android:text="Since July 3, 2013 14h54" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/jeeves_panel_no_border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rowStarbaseDetailsFuelDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:maxLines="1"
            android:text="Fuel"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/rowStarbaseDetailsFuelList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>