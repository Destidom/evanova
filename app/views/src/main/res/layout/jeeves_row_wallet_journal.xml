<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dip"
    style="@style/Theme.Jeeves.Panel"
    android:focusable="false"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/j_walletJournalWhen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday 1 April 2012 20h 34mn" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_walletJournalType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_weight="0.1"
            android:inputType="textMultiLine|textNoSuggestions"
            android:maxLines="2"
            android:text="Bag of Potatoes"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_walletJournalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="123.123.456.000.00 ISK"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:text="Balance"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/j_walletJournalBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:maxLines="1"
            android:text="1.250.000.000,00 ISK"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_walletJournalOwner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_weight="0.5"
            android:text="Owner1" >
        </TextView>

        <TextView
            android:id="@+id/j_walletJournalOwner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="right"
            android:text="Owner2" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/j_walletJournalReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1"
            android:text="blah blah blah..." >

        </TextView>
    </LinearLayout>

</LinearLayout>