<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/skillTrainingBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@drawable/jeeves_panel_no_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/skillTrainingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training Details"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skillTrainingDetailsImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/jeeves_level_list_required_skill"/>

        <TextView
            android:id="@+id/skillTrainingDetailsText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Cooking Potatoes With Style 4"
            android:textColor="@color/white"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/skillTrainingDetailsImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:adjustViewBounds="true"
            android:maxHeight="32dp"
            android:maxWidth="32dp"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/jeeves_level_list_required_skill" />

        <TextView
            android:id="@+id/skillTrainingDetailsText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Cooking Potatoes With Style 4"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
