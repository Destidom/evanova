    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tlabs.android.jeeves.views.character.CharacterTrainingDetailsWidget
            android:id="@+id/f_character_training_TrainingDetailsWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tlabs.android.jeeves.views.character.CharacterTrainingListWidget
            android:id="@+id/f_character_training_TrainingListWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>