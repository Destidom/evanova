<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tlabs.android.jeeves.views.character.CharacterInfoWidget
            android:id="@+id/f_character_CharacterInfoWidget"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.tlabs.android.jeeves.views.character.CharacterTrainingDetailsWidget
            android:id="@+id/f_character_CharacterTrainingDetailsWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>